<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Vaibhav Todo App</title>

  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

  <link rel="stylesheet" href="/style.css" />
</head>
<body>

  <div class="vaibhav-container">
    <h1 class="vaibhav-heading">Task Manager</h1>

    <form action="/add" method="POST" class="vaibhav-form">
      <input
        type="text"
        name="title"
        placeholder="Enter task title"
        class="vaibhav-input"
      />

      <select name="priority" class="vaibhav-select">
        <option value="low">Low</option>
        <option value="high">High</option>
        <option value="urgent">Urgent</option>
      </select>

      <button class="vaibhav-btn">Add Task</button>
    </form>

    <ul class="vaibhav-list">
      <% tasks.forEach(task => { %>
        <li class="vaibhav-item vaibhav-<%= task.priority %>">
          <span><%= task.title %> (<%= task.priority %>)</span>

          <div class="vaibhav-actions">
            <a href="/edit/<%= task._id %>">
              <i class="fa fa-pencil"></i>
            </a>

            <form action="/delete/<%= task._id %>" method="POST">
              <button type="submit">
                <i class="fa fa-trash"></i>
              </button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>
